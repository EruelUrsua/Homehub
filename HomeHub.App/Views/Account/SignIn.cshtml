@model SignInVM

<body>
    <div class="banner"></div>
    <div class="signin-container">
        <div class="card">
            <h2>Sign In</h2>

            @* Check if the account is restricted and show a popup *@
            @if (TempData["AccountRestricted"] != null && (bool)TempData["AccountRestricted"])
            {
                <script>
                    alert("Your account has been permanently restricted. Thank you for using HomeHub.");
                </script>
            }

            <form asp-controller="Account" asp-action="SignIn" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <input asp-for="Username" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <input type="submit" class="btn btn-custom" value="Login" />
            </form>

            <p class="register-link">
                New to HomeHub?
                <a asp-controller="Account" asp-action="Selection">Sign Up</a>
            </p>
        </div>
    </div>
</body>

<style>
    body {
        background-color: #F1F1F1;
        margin: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .banner {
        background-color: #3964D2;
        height: 200px;
        width: 100%;
        position: absolute;
        top: 50%;
        left: 0;
        transform: translateY(-50%);
        z-index: 0;
    }

    .signin-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 90vh;
        position: relative;
        z-index: 1;
        margin-top: -30px;
    }

    .card {
        background-color: #1A3D8F;
        color: white;
        padding: 40px;
        border-radius: 12px;
        text-align: center;
        width: 400px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
    }

    .form-group input {
        width: 100%;
        padding: 8px;
        margin-top: 10px;
        border-radius: 6px;
        border: none;
        font-size: 14px;
    }

    .btn-custom {
        background-color: #ffffff;
        color: #1A3D8F;
        font-weight: bold;
        width: 100%;
        padding: 6px;
        margin-top: 14px;
        font-size: 16px;
        border-radius: 6px;
    }

        .btn-custom:hover {
            background-color: #dfe6f1;
        }

    .register-link {
        margin-top: 15px;
        font-size: 14px;
    }

        .register-link a {
            color: #ffffff;
            font-weight: bold;
            text-decoration: none;
        }

            .register-link a:hover {
                text-decoration: underline;
            }
</style>
