<style>
    .container {
        width: 100%;
        max-width: 960px;
        margin: 0 auto;
        padding: 20px;
        font-family: Arial, sans-serif;
    }

    .header-section {
        background-color: #203B81;
        color: white;
        padding: 30px;
        text-align: center;
        border-radius: 8px;
        margin-bottom: 10px;
    }

    .primary-heading {
        color: #F1F1F1;
        font-weight: bold;
    }

    .card {
        background-color: #eef5ff;
        color: #203B81;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        width: 100%;
        box-sizing: border-box;
    }

    .user-list table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 5px;
        font-size: 16px;
    }

    .user-list th, .user-list td {
        padding: 10px;
        text-align: left;
        color: #203B81;
    }

    .user-list th {
        font-weight: bold;
        background: rgba(255, 255, 255, 0.3);
    }

    .user-list tr {
        border-bottom: 1px solid rgba(32, 59, 129, 0.3);
    }

    @@media screen and (max-width: 768px) {
        .user-list table {
            display: block;
            overflow-x: auto;
            white-space: nowrap;
        }
    }

    .btn-back {
        display: inline-flex;
        align-items: center;
        padding: 10px 20px;
        background-color: #17a2b8; 
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 15px;
        text-decoration: none;
        cursor: pointer;
        font-weight: normal;
        margin-top: 10px;
    }

        .btn-back i {
            margin-right: 8px;
        }

        .btn-back:hover {
            background-color: #138496;
        }
</style>

<div class="container">
    <div class="header-section">
        <h1 class="primary-heading">User Ratings</h1>
    </div>
    @if (Model.Count() < 1)
    {

        <div class="alert alert-info">
            No User Records Found
        </div>

    }
    else{
    <a href="@Url.Action("UsersUnderReview", "Admin")" class="btn btn-back">
        <i class="fa fa-arrow-left"></i> Back to Users
    </a>

    <div class="card">
        <p><strong>Average Rating:</strong> @Model.AverageRating</p>
        <div class="user-list">
            <table>
                <thead>
                    <tr>
                        <th>Score</th>
                        <th>Comments</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rating in Model.Ratings)
                    {
                        <tr>
                            <td>@rating.Score</td>
                            <td>@rating.Comments</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
</div>
