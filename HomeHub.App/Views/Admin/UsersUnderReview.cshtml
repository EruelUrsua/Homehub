@using HomeHub.DataModel
@model IEnumerable<ApplicationUser>

<style>
    .container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        font-family: Arial, sans-serif;
    }

    .header-section {
        background-color: #203B81;
        color: white;
        padding: 30px;
        text-align: center;
        border-radius: 8px;
        margin-bottom: 10px;
    }

    .primary-heading {
        color: #F1F1F1;
        font-weight: bold;
    }

    .card {
        background-color: #eef5ff;
        color: #203B81;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        width: 100%;
        box-sizing: border-box;
    }

    .user-list table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 5px;
        font-size: 16px;
    }

    .user-list th, .user-list td {
        padding: 10px;
        text-align: left;
        color: #203B81;
    }

    .user-list th {
        font-weight: bold;
        background: rgba(255, 255, 255, 0.3);
    }

    .user-list tr {
        border-bottom: 1px solid rgba(32, 59, 129, 0.3);
    }

    .action-buttons {
        display: flex;
        gap: 10px;
        align-items: center;
        flex-wrap: wrap;
    }

    .btn {
        padding: 10px 0;
        width: 140px;
        height: 40px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;
        font-size: 15px;
    }

    .btn-info {
        background-color: #17a2b8;
        color: white;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    @@media screen and (max-width: 768px) {
        .user-list table {
            display: block;
            overflow-x: auto;
            white-space: nowrap;
        }

        .btn {
            width: 100%;
        }

        .action-buttons {
            flex-direction: column;
            align-items: stretch;
        }
    }
</style>

<script>
    function confirmAction(message, url) {
        if (confirm(message)) {
            window.location.href = url;
        }
    }
</script>

<div class="container">
    <div class="header-section">
        <h1 class="primary-heading">Users Under Review</h1>
    </div>
    @if (Model.Count() < 1)
    {

        <div class="alert alert-info">
            No User Records Found
        </div>

    }
    else{
    <div class="card">
        <div class="user-list">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Firstname @user.Lastname</td>
                            <td>@user.Email</td>
                            <td class="action-buttons">
                                <a href="@Url.Action("UserRatings", "Admin", new { userId = user.Id })" class="btn btn-info">View Ratings</a>
                                <button class="btn btn-success" onclick="confirmAction('Are you sure you want to lift the restriction for this user?', '@Url.Action("LiftRestriction", "Admin", new { userId = user.Id })')">Lift Restriction</button>
                                <button class="btn btn-danger" onclick="confirmAction('Are you sure you want to lock this user permanently?', '@Url.Action("PermanentlyRestrict", "Admin", new { userId = user.Id })')">Lock User</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    }
</div>
