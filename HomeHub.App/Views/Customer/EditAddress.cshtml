@model HomeHub.App.Models.UpdateAddressVM

<div class="container">
    <h1>Edit Address</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    <div class="edit-card">
        <form asp-action="EditAddress" asp-controller="Customer" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="button-container">
                <button type="submit" class="custom-btn">Save</button>
                <a asp-controller="Customer" asp-action="UserProfile" class="custom-btn cancel-btn">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #F1F1F1;
        font-family: 'Arial', sans-serif;
        color: #333;
        margin: 0;
        padding: 0;
    }

    h1 {
        font-size: 48px;
        font-weight: 500;
        padding-bottom: 15px;
        text-align: center;
    }

    .container {
        max-width: 900px;
        margin: auto;
        padding: 20px;
        text-align: center;
    }

    .edit-card {
        background-color: #18367b;
        padding: 40px;
        border-radius: 20px;
        color: white;
        text-align: center;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        max-width: 600px;
        margin: auto;
    }

    .form-group {
        margin-bottom: 20px;
        text-align: left;
    }

        .form-group label {
            display: block;
            font-weight: bold;
            margin-bottom: 8px;
            opacity: 0.9;
        }

    .rounded-input {
        border-radius: 25px;
        padding: 14px;
        border: 2px solid rgba(255, 255, 255, 0.5);
        background: rgba(255, 255, 255, 0.2);
        color: white;
        width: 100%;
        font-size: 18px;
        transition: all 0.3s ease-in-out;
        outline: none;
    }

        .rounded-input:focus {
            background: rgba(255, 255, 255, 0.3);
            border-color: white;
        }

    .button-container {
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
        gap: 10px;
    }

    .custom-btn {
        display: inline-block;
        background: white;
        color: #18367b;
        padding: 10px 18px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 25px;
        text-decoration: none;
        box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
        width: 48%;
        text-align: center;
        border: none;
        cursor: pointer;
    }

        .custom-btn:hover {
            background: #f8f9fa;
            transform: translateY(-2px);
            box-shadow: 6px 6px 15px rgba(0, 0, 0, 0.3);
        }

    .cancel-btn {
        background: transparent;
        border: 2px solid white;
        color: white;
    }

        .cancel-btn:hover {
            background: rgba(255, 255, 255, 0.2);
            color: #fff;
        }

    @@media (max-width: 576px) {
        .button-container

    {
        flex-direction: column;
    }

    .custom-btn {
        width: 100%;
    }

    .edit-card {
        padding: 25px;
        border-radius: 15px;
    }

    .rounded-input {
        font-size: 16px;
    }

    }
</style>