@using HomeHub.DataModel;

@model List<Product>

<body>
    <div class="container mt-4">
        <div class="header-section">
            <h2>@(TempData["BusinessName"] ?? "Unknown Business")</h2>
            <p>@(ViewBag.Address ?? "No Address Available")</p>
        </div>

        <div class="card shadow-sm border-0">
            <form asp-controller="Customer" asp-action="ConfirmOrder" method="post">
                <input type="hidden" name="businessId" value="@ViewBag.ProviderID" />

                <!-- Product List -->
                <div class="mb-4">
                    <h4 class="primary-heading">Select a Product</h4>
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info text-center">No Products Found</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-center">Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="@item.ProductImagePath" alt="Product Image" class="product-img me-2" />
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio" name="chosen"
                                                               value="@item.ProductItem" onclick="setPrice('@item.Price')" required>
                                                        <label class="form-check-label">@item.ProductItem</label>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center fw-bold text-primary">Php @item.Price.ToString("0.00")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <input type="hidden" id="price" name="price" value="">
                    }
                </div>

                <!-- Quantity -->
                <div class="mb-3">
                    <label for="qty" class="fw-bold">Quantity</label>
                    <input type="number" id="qty" name="qty" class="form-control" min="1" required />
                </div>

                <!-- Date & Time Selection -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="ddeliv" class="fw-bold">Date of Delivery</label>
                            <input type="date" id="ddeliv" name="ddeliv"
                                   class="form-control"
                                   min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" required />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="tdeliv" class="fw-bold">Time of Delivery</label>
                            <input type="time" id="tdeliv" name="tdeliv"
                                   class="form-control"
                                   min="08:00" max="18:00" required />
                        </div>
                    </div>
                </div>

                <!-- Additional Instructions -->
                <div class="mb-3">
                    <label for="requestatt" class="fw-bold">Additional Instructions</label>
                    <textarea id="requestatt" name="requestatt" class="form-control"
                              rows="3" maxlength="150" placeholder="Enter additional instructions..."></textarea>
                </div>

                <!-- Payment Mode -->
                <div class="mb-3">
                    <label for="mode" class="fw-bold">Mode of Payment</label>
                    <select name="mode" id="mode" class="form-select">
                        <option value="Cash">Cash</option>
                        <option value="Maya">PayMaya</option>
                    </select>
                </div>

                <!-- Promo Code -->
                <div class="mb-3">
                    <label for="promo" class="fw-bold">Promo Code</label>
                    <input type="text" id="promo" name="promo" class="form-control" />
                </div>

                <!-- Buttons -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary fw-bold px-4">Order</button>
                    <a asp-action="Index" class="btn btn-outline-danger fw-bold px-4 ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        function setPrice(Fee) {
            document.getElementById('price').value = Fee;
        }
    </script>
</body>

<style>
    .container {
        max-width: 700px;
        margin: auto;
    }

    .header-section {
        background-color: #203B81;
        color: white;
        padding: 30px;
        text-align: center;
        border-radius: 8px;
        margin-bottom: 20px;
        font-size: 24px;
        font-weight: bold;
    }

    .primary-heading {
        color: #203B81;
        font-weight: bold;
        font-size: 20px;
    }

    .table th {
        background-color: #eef5ff !important;
    }

    .card {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
    }

    .product-img {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 5px;
    }
</style>