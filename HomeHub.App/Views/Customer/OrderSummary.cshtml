@model OrderAvailViewModel

<body>
    <div class="container py-5">
        <div class="header-section text-center">
            <h1 class="primary-heading text-white">Order Confirmed</h1>
            <p class="text-white">Your order has been successfully placed. Here are the details:</p>
        </div>

        <div class="card shadow-sm border-0 rounded-3 p-4">
            <table class="table table-striped table-hover text-center">
                <thead class="table-primary">
                    <tr>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Order</th>
                        <th>Date of Delivery</th>
                        <th>Time of Delivery</th>
                        <th>Additional Instructions</th>
                        <th>Promo Code</th>
                        <th>Payment Method</th>
                        <th>Discount</th>
                        <th>Total Price</th>
                        
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.qty</td>
                        <td>Php @(decimal.TryParse(Model.price, out var parsedPrice) ? parsedPrice.ToString("F2") : Model.price)</td>
                        <td>@Model.chosen</td>
                        <td>@Model.ddeliv</td>
                        <td>@DateTime.Parse(Model.tdeliv).ToString("hh:mm tt")</td>
                        <td>@Model.requestatt</td>
                        <td>@Model.promo</td>
                        <td>@Model.mode</td>
                        <td>@((Model.discount * 100).ToString("0"))%</td>
                        <td><strong>Php @Model.totalPrice.ToString("F2")</strong></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <a asp-action="Index" class="btn btn-primary px-4">Back To Home</a>
        </div>
    </div>

    <style>
        .header-section {
            background-color: #203B81;
            color: white;
            padding: 30px;
            text-align: center;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .primary-heading {
            color: #203B81;
            font-weight: bold;
        }

        .table th {
            background-color: #eef5ff !important;
        }

        .card {
            background-color: #f8f9fa;
        }
    </style>
</body>