@{
    ViewBag.Title = "Pay with QR Code";
}

<h2>Scan to Pay</h2>

@if (!string.IsNullOrEmpty(ViewBag.QRCodeUrl))
{
    <p>QR Code URL: <a href="@ViewBag.QRCodeUrl" target="_blank">@ViewBag.QRCodeUrl</a></p>
    <img src="@ViewBag.QRCodeUrl" alt="PayMaya QR Code">
}
else
{
    <p>Failed to generate QR code. Please try again.</p>
}