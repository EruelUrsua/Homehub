@model HomeHub.DataModel.Business

<h2>Seller Profile</h2>

<div class="card">
    <div class="card-body">
        <h4>@Model.BusinessName</h4>
        <p><strong>Representative:</strong> @Model.RepresentativeName</p>
        <p><strong>Contact:</strong> @Model.ContactNo</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Address:</strong> @Model.CompanyAddress</p>
        <a href="@Url.Action("RefundHistory", "Customer")" class="btn btn-secondary">Back to Refund History</a>
    </div>
</div>

