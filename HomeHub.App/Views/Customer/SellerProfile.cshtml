@model HomeHub.App.Models.SellerProfileVM

<h2>Seller Profile</h2>

<div class="card">
    <div class="card-body">
        <h4>@Model.BusinessName</h4>
        <p><strong>Category:</strong> @Model.Category</p>
        <hr />
        <h5>Seller Details</h5>
        <p><strong>Representative:</strong> @Model.FirstName @Model.LastName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
        <p><strong>Address:</strong> @Model.Address</p>

        <a href="@Url.Action("RefundHistory", "Customer")" class="btn btn-secondary">Back to Refund History</a>
    </div>
</div>
