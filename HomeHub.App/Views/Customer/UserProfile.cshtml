@model HomeHub.App.Models.UserProfileVM

<div class="container py-5">
    <div class="header-section">
        <h1 class="primary-heading text-white">User Profile</h1>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center success-message">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="card border-0 shadow-sm rounded-3 mx-auto" style="max-width: 600px; background-color: #f8f9fa;">
        <div class="card-body">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <th class="bg-primary text-white">First Name</th>
                        <td>@Model.FirstName</td>
                    </tr>
                    <tr>
                        <th class="bg-primary text-white">Last Name</th>
                        <td>@Model.LastName</td>
                    </tr>
                    <tr>
                        <th class="bg-primary text-white">Address</th>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <th class="bg-primary text-white">Map</th>
                        <td>
                        <script src="~/lib/leaflet/leaflet.js"></script>
                        <script src="~ /lib/leaflet/leaflet.min.js"></script>
                        <script src="https://cdn.jsdelivr.net/npm/leaflet.locatecontrol@0.83.1/dist/L.Control.Locate.min.js" charset="utf-8"></script>
                        <a href="~/lib/leaflet/leaflet.js.map"></a>
                        <div id="map" style="width:100%;height:400px"></div>
                        <script>

                                    var map = L.map('map').setView([@Model.lat, @Model.lng], 15);
                                         L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                                         attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
                                         }).addTo(map);
                                        var marker = L.marker([14.58699, 120.98634],{draggable: true} ).addTo(map);
                                         </script>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="text-center mt-3">
                <a asp-controller="Customer" asp-action="EditAddress" class="btn btn-success px-4">Edit Address</a>
            </div>
        </div>
    </div>
</div>

<style>
    .header-section {
        background-color: #203B81;
        color: white;
        padding: 30px;
        text-align: center;
        border-radius: 8px;
        margin: 0 auto;
        margin-bottom: 20px;
        max-width: 600px;
    }

    .primary-heading {
        font-weight: bold;
    }

    .success-message {
        max-width: 600px;
        margin: 0 auto;
    }

    .table th {
        background-color: #203B81 !important;
        color: white !important;
    }
</style>

