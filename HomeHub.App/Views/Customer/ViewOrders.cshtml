@using HomeHub.DataModel;

@model List<OrdersLog>

<style>
    .container {
        width: 100%;
        margin: 0 auto;
        padding: 20px;
        padding-top: 8px;
        font-family: Arial, sans-serif;
    }

    .card {
        background-color: #203B81;
        color: #F1F1F1;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        width: 100%;
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
        box-sizing: border-box;
    }

    h2 {
        font-size: 38px;
        color: #203B81;
        font-weight: bold;
        text-align: center;
    }

    .order-list table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 5px;
        font-size: 16px;
    }

    .order-list th, .order-list td {
        padding: 10px;
        text-align: left;
        color: #F1F1F1;
    }

    .order-list th {
        font-weight: bold;
        background: rgba(255, 255, 255, 0.1);
    }

    .order-list tr {
        border-bottom: 1px solid rgba(255, 255, 255, 0.3);
    }

    .order-list td:last-child {
        padding-right: 15px;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
        align-items: center;
        justify-content: center;
        flex-wrap: nowrap;
    }

    .btn {
        padding: 10px 0;
        width: 160px;
        height: 40px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;
        font-size: 15px;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

    .btn-warning {
        background-color: #ffc107;
        color: black;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

        @@media screen and (max-width: 1024px) {
        .action-buttons

    {
        flex-wrap: wrap;
    }

    }

        @@media screen and (max-width: 768px) {
        .order-list table

    {
        display: block;
        overflow-x: auto;
        white-space: nowrap;
    }

    .btn {
        width: 100%;
    }

    }
</style>

<div class="container">
    <h2>Your Orders</h2>

    <div class="card">
        <div class="order-list">
            <table>
                <thead>
                    <tr>
                        <th>Provider</th>
                        <th>Item</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <!--Still needs ID of logged in user to filter-->
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.BusinessId</td>
                            <td>@item.Item</td>
                            <td>@item.Qty</td>
                            <td>Php @item.Fee</td>
                            <td>@item.Date</td>
                            <td>@item.Status</td>
                            <td class="action-buttons">
                                @if (item.IsRated)
                                {
                                    <form asp-controller="Customer" asp-action="ReviewRating">
                                        <input type="hidden" name="LogId" value="@item.LogId" />
                                        <input type="submit" class="btn btn-success" value="Review Rating" />
                                    </form>
                                }
                                else
                                {
                                    <!--For Rating-->
                                    <form asp-controller="Customer" asp-action="RateProvider">
                                        <input type="hidden" name="LogId" value="@item.LogId" />
                                        <input type="submit" class="btn btn-success" value="Rate Order" />
                                    </form>
                                }
                                <!--For Report-->
                                <form asp-controller="Customer" asp-action="ReportProblem">
                                    <input type="hidden" name="LogId" value="@item.LogId" />
                                    <input type="submit" class="btn btn-warning" value="Report Problem" />
                                </form>
                                <!--For PayMaya-->
                                <form asp-controller="Customer" asp-action="PayOnline">
                                    <input type="hidden" name="LogId" value="@item.LogId" />
                                    <input type="submit" class="btn btn-primary" value="Pay with Maya" />
                                </form>
                                <!--For Cancellation-->
                                @{
                                    var orderDateTime = item.OrderDate.Date + item.Date.TimeOfDay;
                                    var timeRemaining = orderDateTime - DateTime.Now;
                                }
                                @if (item.Status == "Cancelled")
                                {
                                    <button class="btn btn-secondary" disabled>Cancelled</button>
                                }
                                else if (timeRemaining.TotalHours >= 24)
                                {
                                    <form asp-controller="Customer" asp-action="CancelOrder" method="post">
                                        <input type="hidden" name="LogId" value="@item.LogId" />
                                        <input type="submit" class="btn btn-danger" value="Cancel Order" onclick="return confirm('Are you sure you want to cancel this order?');" />
                                    </form>
                                }
                                else
                                {
                                    <button class="btn btn-secondary" disabled>Cannot Cancel</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>