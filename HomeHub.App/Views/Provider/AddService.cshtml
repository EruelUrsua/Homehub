@model HomeHub.App.Models.ServiceVM

<h1>Add Service</h1>

<form id="addServiceForm" asp-controller="Provider" asp-action="AddService" method="post">
    @Html.AntiForgeryToken()

    <!-- Hidden Field to Store ProviderID -->
    <input type="hidden" asp-for="ProviderID" value="@ViewBag.ProviderID" />

    <div class="form-group">
        <label asp-for="ServiceId" class="control-label">Service ID</label>
        <input asp-for="ServiceId" class="form-control" />
        <span asp-validation-for="ServiceId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ServiceItem" class="control-label">Service Item</label>
        <input asp-for="ServiceItem" class="form-control" />
        <span asp-validation-for="ServiceItem" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Details" class="control-label">Details</label>
        <textarea asp-for="Details" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Details" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Fee" class="control-label">Fee</label>
        <input asp-for="Fee" class="form-control" />
        <span asp-validation-for="Fee" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="Available" type="checkbox" class="form-check-input" />
        <label asp-for="Available" class="form-check-label">Available</label>
        <span asp-validation-for="Available" class="text-danger"></span>
    </div>

    <br />

    <div class="form-group">
        <input type="submit" value="Add Service" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
