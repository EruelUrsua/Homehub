@model HomeHub.App.Models.ServiceVM

<div class="container mt-4">
    <div class="header-section">
        <h2>Add Service</h2>
    </div>

    <div class="card shadow-sm border-0 p-4">
        <form id="addServiceForm" asp-controller="Provider" asp-action="AddService" method="post">
            @Html.AntiForgeryToken()

            <!-- Hidden Provider ID -->
            <input type="hidden" asp-for="ProviderID" value="@ViewBag.ProviderID" />

            <div class="mb-3">
                <input type="hidden" asp-for="ServiceId" class="form-control" value="@ViewBag.GeneratedServiceId" />
            </div>

            <div class="mb-3">
                <label asp-for="ServiceItem" class="form-label fw-bold">Service Item</label>
                <input asp-for="ServiceItem" class="form-control" required />
                <span asp-validation-for="ServiceItem" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Details" class="form-label fw-bold">Details</label>
                <textarea asp-for="Details" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Fee" class="form-label fw-bold">Fee</label>
                <div class="input-group">
                    <span class="input-group-text">₱</span>
                    <input asp-for="Fee" class="form-control" type="number" required />
                </div>
                <span asp-validation-for="Fee" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="Available" type="checkbox" class="form-check-input" />
                <label asp-for="Available" class="form-check-label fw-bold">Available</label>
                <span asp-validation-for="Available" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary fw-bold px-4">Add Service</button>
                <a asp-action="ServicesView" class="btn btn-outline-danger fw-bold px-4 ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .container {
        max-width: 600px;
    }

    .header-section {
        background-color: #203B81;
        color: white;
        padding: 20px;
        text-align: center;
        border-radius: 8px;
        margin-bottom: 20px;
        font-size: 22px;
        font-weight: bold;
    }

    .card {
        background-color: #f8f9fa;
        border-radius: 8px;
    }
</style>
