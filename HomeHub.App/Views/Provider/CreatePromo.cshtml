@model PromoViewModel

<body>
    <div class="container py-5">
        <div class="header-section">
            <h1 class="primary-heading text-white">Post a Promo</h1>
            <p class="text-white">Create discounts and attract more customers!</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-center">
                        Create a New Promo Code
                    </div>
                    <div class="card-body">
                        <form asp-action="CreatePromo" method="post">
                            <div class="mb-3">
                                <label asp-for="PromoName" class="form-label fw-semibold">Promo Name</label>
                                <input asp-for="PromoName" class="form-control" maxlength="10" required />
                                <span asp-validation-for="PromoName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="PromoCode" class="form-label fw-semibold">Promo Code</label>
                                <input asp-for="PromoCode" class="form-control" maxlength="10" required />
                                <span asp-validation-for="PromoCode" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="PromoStart" class="form-label fw-semibold">Promo Start Date</label>
                                <input asp-for="PromoStart" class="form-control" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="PromoStart" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="PromoEnd" class="form-label fw-semibold">Promo End Date</label>
                                <input asp-for="PromoEnd" class="form-control" type="date" min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="PromoEnd" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Discount" class="form-label fw-semibold">Discount</label>
                                <div class="input-group">
                                    <input asp-for="Discount" class="form-control" type="number" step="1" min="1" max="100" />
                                    <span class="input-group-text">%</span>
                                </div>
                                <span asp-validation-for="Discount" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary w-100">Create Promo Code</button>
                            <a asp-action="ProviderHome" class="btn btn-danger mt-2">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>


<style>
    body {
        background-color: #F1F1F1;
    }

    .header-section {
        background-color: #203B81;
        max-width: 600px;
        margin: 0 auto;
        color: white;
        padding: 30px;
        text-align: center;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .primary-heading {
        color: #203B81;
        font-weight: bold;
    }

    .card {
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        max-width:600px;
        margin: 0 auto;
    }

    .card-header {
        background-color: #eef5ff !important;
        font-weight: bold;
    }

    .btn-primary {
        background-color: #203B81;
        border: none;
    }

        .btn-primary:hover {
            background-color: #1a2f6f;
        }

    .btn-danger {
        width: 100%;
    }
</style>