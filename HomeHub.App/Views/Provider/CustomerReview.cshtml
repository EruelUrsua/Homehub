@model HomeHub.App.Models.ProviderReviewVM

<h2>📝 Review Customer</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="CustomerReview" method="post">
    <input type="hidden" asp-for="OrderId" />
    <input type="hidden" asp-for="CustomerId" />

    <div class="form-group">
        <label>Customer Name:</label>
        <input type="text" class="form-control" value="@Model.CustomerName" disabled />
    </div>

    <div class="form-group">
        <label>Score (1-5):</label>
        <input type="number" asp-for="Score" class="form-control" min="1" max="5" required />
        <span asp-validation-for="Score" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Comments:</label>
        <textarea asp-for="Comments" class="form-control" required></textarea>
        <span asp-validation-for="Comments" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>
