@model PromoViewModel

<div class="container py-5">
    <div class="header-section">
        <h1 class="fw-bold">Edit Promo</h1>
    </div>

    <div class="card shadow-lg card-container">
        <div class="card-body">
            <form asp-action="EditPromo" method="post">
                <input type="hidden" asp-for="PromoID" />

                <div class="mb-3">
                    <label asp-for="PromoName" class="form-label fw-bold"></label>
                    <input asp-for="PromoName" class="form-control" maxlength="10" required />
                    <span asp-validation-for="PromoName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PromoCode" class="form-label fw-bold"></label>
                    <input asp-for="PromoCode" class="form-control" maxlength="10" required />
                    <span asp-validation-for="PromoCode" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PromoStart" class="form-label fw-bold"></label>
                    <input asp-for="PromoStart" class="form-control" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                    <span asp-validation-for="PromoStart" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PromoEnd" class="form-label fw-bold"></label>
                    <input asp-for="PromoEnd" class="form-control" type="date" min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" required />
                    <span asp-validation-for="PromoEnd" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Discount" class="form-label fw-bold"></label>
                    <div class="input-group">
                        <input asp-for="Discount" class="form-control" type="number" step="1" min="1" max="100" id="discountInput" value="@(Model.Discount.ToString("0"))" />
                        <span class="input-group-text">%</span>
                    </div>
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>

                <div class="text-center d-flex justify-content-center gap-3 mt-4">
                    <button type="submit" class="btn btn-success btn-lg">Save Changes</button>
                    <a asp-action="ManagePromo" class="btn btn-danger btn-lg">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .header-section {
        background-color: #203B81;
        color: white;
        padding: 30px;
        text-align: center;
        border-radius: 8px;
        margin: 0 auto 20px;
        max-width: 600px;
    }

    .card-container {
        max-width: 600px;
        margin: 0 auto;
    }
</style>