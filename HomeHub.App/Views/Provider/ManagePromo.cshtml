@using HomeHub.DataModel
@model List<Promo>

<style>
    .header-section {
        background-color: #203B81;
        color: white;
        padding: 30px;
        text-align: center;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .table tbody tr:hover {
        background-color: #eef5ff;
    }

    .btn-sm {
        min-width: 100px;
    }
</style>

<div class="container py-5">
    <div class="header-section">
        <h1 class="fw-bold">Manage Promos</h1>
    </div>

    <div class="card shadow-lg">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered">
                    <thead class="table-primary">
                        <tr>
                            <th>Promo Name</th>
                            <th>Promo Code</th>
                            <th>Promo Start</th>
                            <th>Promo End</th>
                            <th>Discount</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PromoName</td>
                                <td>@item.PromoCode</td>
                                <td>@item.PromoStart.ToShortDateString()</td>
                                <td>@item.PromoEnd.ToShortDateString()</td>
                                <td>@((item.Discount * 100).ToString("0"))%</td>
                                <td class="text-center">
                                    <form asp-controller="Provider" asp-action="EditPromo" method="get" class="d-inline">
                                        <input type="hidden" name="id" value="@item.PromoId" />
                                        <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="text-center mt-4">
                <form asp-controller="Provider" asp-action="CreatePromo">
                    <button type="submit" class="btn btn-success btn-lg">Create New Promo</button>
                </form>
            </div>
        </div>
    </div>
</div>
