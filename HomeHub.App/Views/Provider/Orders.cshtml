@model IEnumerable<HomeHub.App.Models.ProviderOrderVM>

<h2>Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Client ID</th>
            <th>Order Date</th>
            <th>Schedule</th>
            <th>Ordered Items</th>
            <th>Quantity</th>
            <th>Fee</th>
            <th>Total Discount</th>
            <th>Discount</th>
            <th>Promo Code</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.ClientId</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.Schedule.ToShortDateString()</td>
                <td>@order.OrderedPs</td>
                <td>@order.Quantity</td>
                <td>₱@order.Fee.ToString("N2")</td>
                <td>
                    @if (!string.IsNullOrEmpty(order.PromoCode))
                    {
                        <span>₱@order.DiscountedFee.ToString("N2")</span>
                    }
                </td>
                <td>
                    @if (order.DiscountPercentage > 0)
                    {
                        <span>@((int)order.DiscountPercentage) %</span>
                    }
                    else
                    {
                        <span>No Promo Used</span>
                    }
                </td>

                <td>
                    @if (!string.IsNullOrEmpty(order.PromoCode))
                    {
                        @order.PromoCode
                    }
                    else
                    {
                        <span>No Promo Used</span>
                    }
                </td>
                <td>
                    @if (order.Status)
                    {
                        <span class="text-success">Accepted</span>
                    }
                    else
                    {
                        <span class="text-warning">Pending</span>
                    }
                </td>
                <td>
                    @if (!order.Status)  
                    {
                        <form asp-action="AcceptOrder" asp-route-clientId="@order.ClientId" method="post">
                            <button type="submit" class="btn btn-sm btn-primary">Accept</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

