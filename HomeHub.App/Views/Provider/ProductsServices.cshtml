@model HomeHub.App.Models.CombinedViewModel

<h1>Your Offer List</h1>

<div class="mb-3">
    <a class="btn btn-success" asp-action="AddProduct">Add Product</a>
    <a class="btn btn-success" asp-action="AddService">Add Service</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Type</th>
            <th>Name</th>
            <th>Price</th>
            <th>Availability</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>Product</td>
                <td>@product.ProductItem</td>
                <td>₱@product.Price.ToString("N2")</td>
                <td></td>
                <td>
                    <a class="btn btn-primary" asp-action="UpdateProduct" asp-route-id="@product.ProductId">Update</a>
                    <form asp-controller="Provider" asp-action="RemoveProduct" method="post" onsubmit="return confirmDelete('product', '@product.ProductItem');">
                        <input type="hidden" name="id" value="@product.ProductId" />
                        <input type="submit" class="btn btn-danger" value="Delete" />
                    </form>
                </td>
            </tr>
        }

        @foreach (var service in Model.Services)
        {
            <tr>
                <td>Service</td>
                <td>@service.ServiceItem</td>
                <td>₱@service.Fee.ToString("N2")</td>
                <td>
                    @if (service.Available)
                    {
                        <span class="text-success">Available</span>
                    }
                    else
                    {
                        <span class="text-danger">Not Available</span>
                    }
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="UpdateService" asp-route-id="@service.ServiceId">Update</a>
                    <form asp-controller="Provider" asp-action="RemoveService" method="post" onsubmit="return confirmDelete('service', '@service.ServiceItem');">
                        <input type="hidden" name="id" value="@service.ServiceId" />
                        <input type="submit" class="btn btn-danger" value="Delete" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function confirmDelete(type, name) {
        return confirm(`Are you sure you want to delete this ${type}: "${name}"?`);
    }
</script>
