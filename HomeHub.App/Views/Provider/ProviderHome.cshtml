@{
    bool isProductProvider = ViewBag.BusinessType == false;
    bool isServiceProvider = ViewBag.BusinessType == true;
}
<div class="container-fluid">
    <div class="row">
        <!--Sidebar-->
        <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar">
            <div class="position-sticky">
                <h4 class="text-white text-center py-3">Dashboard</h4>
                <ul class="nav flex-column">
                    @if (isProductProvider)
                    {
                        <li class="nav-item"><a class="nav-link text-white" asp-action="ProductsView">Your Products</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-action="ProductOrders">Product Orders</a></li>
                    }
                    @if (isServiceProvider)
                    {
                        <li class="nav-item"><a class="nav-link text-white" asp-action="ServicesView">Your Services</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-action="ServiceRequests">Service Requests</a></li>
                    }
                    <li class="nav-item"><a class="nav-link text-white" asp-action="ManagePromo">Post a Promo</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-action="OrdersLog">Orders Log</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-action="SalesView">Sales Report</a></li>
                </ul>
            </div>
        </nav>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 content">
            <div class="container-fluid py-5 header-section">
                <h1>Welcome to HomeHub!</h1>
                <p class="lead">What would you like to do?</p>
            </div>

            <div class="row mt-4">
                @if (isProductProvider)
                {
                    foreach (var action in new[]
                    {
                        new { Name = "Your Products", Route = "ProductsView" },
                        new { Name = "Product Orders", Route = "ProductOrders" },
                        new { Name = "Post a Promo", Route = "ManagePromo" },
                        new { Name = "Refund Requests", Route = "ShowRefundRequests" },
                        new { Name = "In-Store Purchase", Route = "InStorePurchase" },
                        new { Name = "Orders Log", Route = "OrdersLog" },
                        new { Name = "Sales Report", Route = "SalesView" },
                        new { Name = "Reviewed Customers", Route = "ReviewedCustomers"}
                    })
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-sm">
                                <div class="card-body text-center">
                                    <h5 class="card-title">@action.Name</h5>
                                    <a class="btn btn-primary fw-bold px-4 mt-2" asp-action="@action.Route">Manage</a>
                                </div>
                            </div>
                        </div>
                    }
                }

                @if (isServiceProvider)
                {
                    foreach (var action in new[]
                    {
                        new { Name = "Your Services", Route = "ServicesView" },
                        new { Name = "Service Requests", Route = "ServiceRequests" },
                        new { Name = "Post a Promo", Route = "ManagePromo" },
                        new { Name = "Orders Log", Route = "OrdersLog" },
                        new { Name = "Reviewed Customers", Route = "ReviewedCustomers"}
                    })
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-sm">
                                <div class="card-body text-center">
                                    <h5 class="card-title">@action.Name</h5>
                                    <a class="btn btn-primary fw-bold px-4 mt-2" asp-action="@action.Route">Manage</a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </main>
    </div>
</div>

<style>
    .content {
        padding-top: 80px;
    }

    .sidebar {
        height: 100vh;
        position: fixed;
        top: 56px;
        left: 0;
        width: 250px;
        padding-top: 20px;
    }

        .sidebar .nav-link {
            font-size: 16px;
            padding: 12px;
            transition: background 0.3s ease-in-out;
        }

            .sidebar .nav-link:hover {
                background: #3658a7;
                border-radius: 5px;
            }

    .header-section {
        background-color: #203B81;
        color: white;
        padding: 20px;
        text-align: center;
        border-radius: 8px;
        font-size: 22px;
        font-weight: bold;
    }

    .card {
        border-radius: 12px;
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.05);
        }
</style>
