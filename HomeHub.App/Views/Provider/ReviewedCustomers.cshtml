@model List<HomeHub.App.Models.ProviderReviewVM>

<div class="container mt-4">
    <div class="header-section">
        <h2>Reviewed Customers</h2>
    </div>

    <table class="table table-striped table-bordered align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th>Customer Name</th>
                <th>Order ID</th>
                <th>Score</th>
                <th>Comments</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model)
            {
                <tr>
                    <td>@review.CustomerName</td>
                    <td>@review.OrderId</td>
                    <td>
                        <span class="badge bg-primary">@review.Score</span>
                    </td>
                    <td>@review.Comments</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="OrdersLog" class="btn btn-light border border-dark">Back to Orders Log</a>
</div>

<style>
    .header-section {
        background-color: #203B81;
        color: white;
        padding: 20px;
        text-align: center;
        border-radius: 8px;
        margin-bottom: 20px;
        font-size: 22px;
        font-weight: bold;
    }

    .table th {
        background-color: #203B81 !important;
        color: white !important;
    }
</style>
