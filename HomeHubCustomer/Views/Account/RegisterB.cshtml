<h3>Create an Account</h3>

<form asp-controller="Account" asp-action="RegisterB" method="post">

      <label asp-for="Email"></label>
    <input asp-for="Email" class="form-control"/>
    <span asp-validation-for="Email" class="text-danger"></span>
    <br />

    
      <label asp-for="CompanyName"> Company Name</label>
    <input asp-for="CompanyName" class="form-control"/>
    <span asp-validation-for="CompanyName" class="text-danger"></span>
    <br />

     
      <label asp-for="Address">Company Address </label>
    <input asp-for="Address"class="form-control"/> 
    <span asp-validation-for="Address" class="text-danger"></span>
    <br />

        
     <label asp-for="BusinessPermitNo">Business Permit Number</label>
    <input asp-for="BusinessPermitNo" class="form-control"/>
    <span asp-validation-for="BusinessPermitNo" class="text-danger"></span>
    <br />



    <label asp-for="Password"></label>
    <input asp-for="Password" class="form-control" />
    <span asp-validation-for="Password" class="text-danger"></span>
    <br 

  

    @*<label asp-for="ConfirmPassword"></label>
    <input asp-for="ConfirmPassword" class="form-control" />
    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    <br />*@

    <label asp-for="Businesstype">Business Type</label>
    <select asp-for="Businesstype" class="form-control">
        <option value="Product">Product</option>
        <option value="Service">Service Provider</option>
    </select>
    <span asp-validation-for="Businesstype" class="text-danger"></span>
    <br />


    <a asp-controller="Home" asp-action="Index" class="btn btn-light">
        Back to Home Page
    </a>

    <input type="submit" class="btn btn-success" value="Create Account" />
</form>

