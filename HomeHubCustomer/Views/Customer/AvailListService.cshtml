@model List<Service>

<body>
    <!-- Name and address of chosen provider-->


    <!-- Product List of chosen provider-->
    <div class="card">
        <form asp-controller="Customer" asp-action="ConfirmOrder" method="post">
            <input type="hidden" name="businessId" value="@ViewBag.ProviderID" />
                
            @if (Model.Count() < 1)
            {
                <div class="alert alert-info">
                    No Services Found
                </div>
            }
            else
            {
                <table class="table table-striped table-hover">
                    <thead>
                        <th>Service</th>
                        <th>Price</th>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><input type="radio" id="chosen" name="chosen" value="@item.ServiceItem" onclick="setPrice(@item.Fee)">@item.ServiceItem</td>
                                <td>@item.Fee</td>
                            </tr>
                        }
                        <input type="hidden" id="price" name="price" value="">
                    </tbody>
                </table>
            }

            <table>
                <tr>
                    <td>Date of Booking</td>
                    <td>Time of Booking</td>
                </tr>
                <tr>
                    <td><input type="date" id="ddeliv" name="ddeliv" />
                    <td>
                    <td><input type="time" id="tdeliv" name="tdeliv" /></td>
                </tr>
            </table>

            <label for="requestatt">Request Attachment</label>
            <input type="text" id="requestatt" name="requestatt" />

            <div>
                Mode of Payment
                <select name="mode" id="mode">
                    <option value="Cash">Cash</option>
                    <option value="GCash">GCash</option>
                </select>
            </div>

            <div>
                Promo Code
                <input type="text" id="promo" name="promo" />
            </div>

            <!-- To pass logged in user's' id
            <input type="hidden" id="userID" value="@User.Identity.Name" />-->

            <input type="submit" value="Book" />
        </form>
    </div>

    <script>
        function setPrice(price) {
            document.getElementById('price').value = price;
        }
    </script>

</body>