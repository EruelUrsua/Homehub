@model List<Service>

<body>
    <!-- Name and address of chosen provider-->


    <!-- Product List of chosen provider-->
    <div class="card">
        <form asp-controller="Customer" asp-action="ConfirmOrder" method="post">
            @if (Model.Count() < 1)
            {
                <div class="alert alert-info">
                    No Services Found
                </div>
            }
            else
            {
                <table class="table table-striped table-hover">
                    <thead>
                        <th>Service</th>
                        <th>Price</th>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><input type="radio" id="chosen" name="chosen" value="@item.ServiceItem">@item.ServiceItem</td>
                                <td><input type="hidden" id="price" name="price" value="@item.Fee">@item.Fee</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

            <label for="qty">Quantity</label>
            <input type="number" id="qty" name="qty" />

            <table>
                <tr>
                    <td>Date of Booking</td>
                    <td>Time of Booking</td>
                </tr>
                <tr>
                    <td><input type="date" id="ddeliv" name="ddeliv" />
                    <td>
                    <td><input type="time" id="tdeliv" name="tdeliv" /></td>
                </tr>
            </table>

            <label for="requestatt">Request Attachment</label>
            <input type="text" id="requestatt" name="requestatt" />

            <div>
                Mode of Payment
                <select name="mode" id="mode">
                    <option value="Cash">Cash</option>
                    <option value="GCash">GCash</option>
                </select>
            </div>

            <div>
                Promo Code
                <input type="text" id="promo" name="promo" />
            </div>

            <input type="submit" value="Book" />
        </form>
    </div>


</body>