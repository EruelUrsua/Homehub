@{
    ViewData["Title"] = "Home Page";
}
<style>
    .html {
        font-family: Arial
    }

    .row {
        padding-top: 30px;
        padding-bottom: 20px;
    }

    .card {
        background-color: #203B81;
        border-radius: 30px;
        width: 300;
        height: 270px;
        padding-top: 42px;
        padding-left: 55px;
        margin-top: 20px;
    }

    .card1 {
        background-color: #203B81;
        border-radius: 30px;
        width: 300;
        height: 300px;
        padding: 20px;
    }

    .button {
        width: 30px;
        height: 20px;
        background-color: #F1F1F1;
        color: #203B81;
        font-family: Arial;
        border-color: #F1F1F1;
    }

    button {
        background-color: #F1F1F1;
        color: #203B81;
        font-family: Arial;
        font-size: 20px;
        border-color: #F1F1F1;
        border-radius: 30px;
        height: 80px;
        width: 300px;
    }


    #snackbar {
    visibility: hidden;
    min-width: 250px;
    margin-left: -125px;
    background-color: #333;
    color: #fff;
    text-align: center;
    border-radius: 2px;
    padding: 16px;
    position: fixed;
    z-index: 1;
    left: 50%;
    bottom: 30px;
    }

    #snackbar.show {
        visibility: visible;
        -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
        animation: fadein 0.5s, fadeout 0.5s 2.5s;
    }

    keyframes fadein {
        from {bottom: 0; opacity: 0;}
        to {bottom: 30px; opacity: 1;}
    }

    keyframes fadeout {
        from {bottom: 30px; opacity: 1;}
        to {bottom: 0; opacity: 0;}
    }

    .promo-carousel {
        text-align: center;
        position: relative;
    }

    .promo-navigation-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 10px;
    }
    
    .promo-navigation button {
        background-color: #F1F1F1;
        color: #203B81;
        border: none;
        font-size: 14x;
        padding: 5px 15px;
        margin: 0 5px;
        cursor: pointer;
        border-radius: 30px;
    }

    .promo-item {
        margin: 10px 0;
        padding: 20px;
        background-color: #203B81;
        color: #fff;
        border-radius: 10px;
    }

    button2 {
        margin-top: 20px;
        padding: 10px 20px;
        font-size: 18px;
        border-radius: 30px;
        cursor: pointer;
    }

        button2:hover {
            background-color: #F1F1F1;
            color: #203B81;
        }

</style>

<body style="background-color:#F1F1F1">
    <!--
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>
    -->

    <div id="snackbar"></div>

    <div>
        <h2>Welcome back</h2>
    </div>


    <div class="card">
        <div class="container">
            <h4 style="color:#F1F1F1">What do you want to do?</h4>
            <div class="row" style="color:#203B81; border-color:#F1F1F1">
                <div class="col-sm-4"><a class="nav-link" asp-action="OrderProduct"><button>Order Products</button></a></div>
                <div class="col-sm-4"><a class="nav-link" asp-action="AvailService"><button>Avail Services</button></a></div>
                <div class="col-sm-4"><a class="nav-link" asp-action="ViewOrders"><button>View Orders</button></a></div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col">
            <h3>Recommendations for you</h3>
            <div class="card1"></div>
        </div>
        <div class="col">
            <h3>Ongoing Promos</h3>
            <div class="card1 promo-carousel">
                @if (ViewBag.Promos != null && ViewBag.Promos.Count > 0)
                {
                    var currentPromo = ViewBag.Promos[ViewBag.CurrentPromoIndex];
                    <div class="promo-item">
                        <h4 style="color:#F1F1F1">@currentPromo.PromoName</h4>
                        <p>Ends on: @currentPromo.PromoEnd.ToString("yyyy-MM-dd")</p>
                    </div>
                }
                else
                {
                    <p>No ongoing promos at the moment.</p>
                }
                <div class="promo-navigation-container">
                    <!-- Navigation buttons -->
                    <div class="promo-navigation">
                        @if (ViewBag.Promos != null && ViewBag.Promos.Count > 0)
                        {
                            var prevPromoIndex = (ViewBag.CurrentPromoIndex - 1 + ViewBag.Promos.Count) % ViewBag.Promos.Count;
                            <a href="@Url.Action("Index", new { promoIndex = prevPromoIndex })"><button class="button2">❮ Prev</button></a>
                        }
                    </div>
                    <div class="promo-navigation">
                        @if (ViewBag.Promos != null && ViewBag.Promos.Count > 0)
                        {
                            var nextPromoIndex = (ViewBag.CurrentPromoIndex + 1) % ViewBag.Promos.Count;
                            <a href="@Url.Action("Index", new { promoIndex = nextPromoIndex })"><button class="button2">Next ❯</button></a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>