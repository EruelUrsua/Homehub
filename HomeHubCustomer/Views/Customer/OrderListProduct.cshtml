@model List<Product>
<style>
  
</style>

<body>
<!-- Name and address of chosen provider-->


<!-- Product List of chosen provider-->
    <div class="card">
        <form asp-controller="Customer" asp-action="ConfirmOrder" method="post">
            @if (Model.Count() < 1)
            {
                <div class="alert alert-info">
                    No Products Found
                </div>
            }
            else
            {
                <table class="table table-striped table-hover">
                    <thead>
                        <th>Product</th>
                        <th>Price</th>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><input type="radio" id="chosen" name="chosen" value="@item.ProductItem">@item.ProductItem</td>
                                <td><input type="hidden" id="price" name="price" value="@item.Price">@item.Price</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

            <table>
                <tr>
                    <td>Date of Delivery</td>
                    <td>Time of Delivery</td>
                </tr>
                <tr>
                    <td><input type="date" id="ddeliv" name="ddeliv" />
                    <td>
                    <td><input type="time" id="tdeliv" name="tdeliv" /></td>
                </tr>
            </table>

            <label for="requestatt">Request Attachment</label>
            <input type="text" id="requestatt" name="requestatt" />

            <div>
                Mode of Payment
                <select name="mode" id="mode">
                    <option value="Cash">Cash</option>
                    <option value="GCash">GCash</option>
                </select>
            </div>

            <div>
                Promo Code
                <input type="text" id="promo" name="promo"/>
            </div>

            <input type="submit" value="Order" onclick="confirmOrder()" />
        </form>

    </div>


</body>