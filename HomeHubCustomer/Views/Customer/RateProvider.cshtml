@model ClientOrder

<style>
    .card {
        background-color: #203B81;
        color: #F1F1F1;
        border-radius: 10px;
        width: 90%;
        max-width: 800px;
        padding: 30px;
        margin: auto;
        box-sizing: border-box;
        height: auto;
    }

    h1 {
        font-size: 38px;
        color: #203B81;
        font-weight: bold;
        text-align: center;
    }

    h2 {
        font-size: 30px;
        color: #F1F1F1;
        margin-bottom: 10px;
        font-weight: bold;
    }

    h3 {
        font-size: 20px;
        color: #F1F1F1;
        margin-bottom: 10px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        padding: 10px;
        text-align: left;
        color: #F1F1F1;
    }

    th {
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }

    .button-container {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    input[type="submit"] {
        background-color: #F1F1F1;
        color: #203B81;
        font-size: 1rem;
        font-weight: bold;
        border: none;
        border-radius: 30px;
        padding: 10px 30px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.2);
    }

        input[type="submit"]:hover {
            background-color: #ddd;
        }

    label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
    }
</style>

<div class="text-center">
    <h1>Rate Your Order</h1>
</div>

<div class="card">
    <form asp-controller="Customer" asp-action="SubmitRating">
        <input type="hidden" name="clientId" value="@Model.ClientId" />
        <input type="hidden" name="businessId" value="@Model.BusinessId" />


        <!--Provider Name -->
        <h2>@ViewBag.BusinessName</h2>

        <!--Order Details -->
        <h3>Order Summary</h3>
        <table>
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Qty</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Total Price</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.OrderedPs</td>
                    <td>@Model.Quantity</td>
                    <td>@Model.OrderDate</td>
                    <td>@Model.Schedule</td>
                    <td>@Model.Fee</td>
            </tbody>
        </table>

        <label for="score">Rating</label>
        <select id="score" name="score" class="form-control">
            <option value="1">&#9733; 1 Star</option>
            <option value="2">&#9733;&#9733; 2 Stars</option>
            <option value="3">&#9733;&#9733;&#9733; 3 Stars</option>
            <option value="4">&#9733;&#9733;&#9733;&#9733; 4 Stars</option>
            <option value="5">&#9733;&#9733;&#9733;&#9733;&#9733; 5 Stars</option>
        </select>

        <label>Comments</label>
        <input type="text" id="comments" name="Comments" class="form-control" required/>

        <div class="button-container">
            <input type="submit" value="Submit Rating" />
        </div>
    </form>
</div>