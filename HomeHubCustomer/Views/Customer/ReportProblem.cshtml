@model ClientOrder

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #F1F1F1;
        text-align: center;
        padding-top: 20px;
    }

    .card {
        background-color: #203B81;
        color: #F1F1F1;
        border-radius: 20px;
        padding: 40px;
        max-width: 700px;
        margin: 0 auto;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.2);
    }

    h1.display-4 {
        color: #203B81;
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    h1, h3 {
        margin-bottom: 10px;
    }

    table {
        width: 100%;
        margin-top: 20px;
        color: #F1F1F1;
    }

    th, td {
        padding: 8px;
        text-align: center;
    }

    th {
        font-weight: bold;
        border-bottom: 1px solid #ddd;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        margin-top: 10px;
        margin-bottom: 20px;
        font-size: 1rem;
        color: #333;
    }

        .form-control::placeholder {
            color: #999;
        }

    .button {
        background-color: #F1F1F1;
        color: #203B81;
        font-size: 1rem;
        font-weight: bold;
        border: none;
        border-radius: 30px;
        padding: 10px 30px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.2);
    }

        .button:hover {
            background-color: #ddd;
        }
</style>

<div class="text-center">
    <h1 class="display-4">Report a Problem</h1>
</div>

<div class="card">
    <form asp-controller="Customer" asp-action="SubmitReport">
        <input type="hidden" name="clientId" value="@Model.ClientId" />


        <!--Provider Name -->
        <h1>@ViewBag.BusinessName</h1>

        <!--Order Details -->
        <h3>Order Summary</h3>
        <table>
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Qty</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Total Price</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.OrderedPs</td>
                    <td>@Model.Quantity</td>
                    <td>@Model.OrderDate</td>
                    <td>@Model.Schedule</td>
                    <td>@Model.Fee</td>
            </tbody>
        </table>

        <label for="title">Title</label>
        <input type="text" id="title" name="title" class="form-control" placeholder="What is the problem you have encountered?" />

        <label>Description</label>
        <input type="text" id="description" name="description" class="form-control" placeholder="Give a short description of the problem" />

        <div class="text-center">
            <input type="submit" class="button" value="Submit Report" />
        </div>
    </form>
</div>