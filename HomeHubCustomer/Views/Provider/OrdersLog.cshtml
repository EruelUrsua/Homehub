@model IEnumerable<HomeHub.App.Models.OrdersLogViewModel>

<style>
    .container {
        width: 100%;
        margin: 0 auto;
        padding: 20px;
        padding-top: 8px;
        font-family: Arial, sans-serif;
    }

    .card {
        background-color: #203B81;
        color: #F1F1F1;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        width: 100%;
        max-width: 100%;
        box-sizing: border-box;
    }

    h2 {
        font-size: 38px;
        color: #203B81;
        font-weight: bold;
        text-align: center;
    }

    .order-list table {
        width: 100%;
        border-collapse: collapse;
    }

    .order-list th, .order-list td {
        padding: 12px;
        text-align: left;
        color: #F1F1F1;
    }

    .order-list th {
        font-weight: bold;
        background-color: #203B81;
    }

    .order-list tbody tr {
        background-color: #203B81;
        transition: background-color 0.2s;
    }

        .order-list tbody tr:hover {
            background-color: #2a4b91;
        }

    .action-buttons {
        display: flex;
        gap: 10px;
        align-items: center;
        width: 100%;
    }
</style>

<body>
    <div class="container">
        <h2>Orders Log</h2>

        <div class="card">
            <div class="order-list">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Log ID</th>
                            <th>Order ID</th>
                            <th>Order Date</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Business ID</th>
                            <th>Item</th>
                            <th>Quantity</th>
                            <th>Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model)
                        {
                            <tr>
                                <td>@log.LogId</td>
                                <td>@log.OrderId</td>
                                <td>@log.OrderDate.ToShortDateString()</td>
                                <td>@log.FirstName</td>
                                <td>@log.LastName</td>
                                <td>@log.BusinessId</td>
                                <td>@log.Item</td>
                                <td>@log.Qty</td>
                                <td>@log.Date.ToShortDateString()</td>
                                <td>@log.Status</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>