@model HomeHub.App.Models.CombinedViewModel


<style>
    .container {
        width: 100%;
        margin: 0 auto;
        padding: 20px;
        font-family: Arial, sans-serif;
    }

    .card {
        background-color: #203B81;
        color: #F1F1F1;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 900px;
        margin: 20px auto;
        box-sizing: border-box;
    }

    h1 {
        font-size: 42px;
        color: #203B81;
        font-weight: bold;
        text-align: center;
        margin-top: 0;
    }

    .table-container {
        overflow-x: auto;
        margin-top: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 10px;
            text-align: left;
            color: #F1F1F1;
        }

        .table th {
            font-weight: bold;
            background-color: #203B81;
        }

        .table tbody tr {
            background-color: #203B81;
            transition: background-color 0.2s;
        }

            .table tbody tr:hover {
                background-color: #2a4b91;
            }

        .table tbody td {
            border-bottom: 1px solid #1c3a60;
        }

    .action-buttons {
        display: flex;
        gap: 8px;
        align-items: center;
        justify-content: center;
    }

    .btn {
        padding: 8px 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 0.875rem;
        font-weight: bold;
        text-align: center;
        color: white;
        width: 100%;
        max-width: 120px;
        text-transform: uppercase;
    }

    .btn-primary {
        background-color: #3498db;
    }

        .btn-primary:hover {
            background-color: #2980b9;
        }

    .btn-danger {
        background-color: #e74c3c;
    }

        .btn-danger:hover {
            background-color: #c0392b;
        }

    .btn-success {
        background-color: #27ae60;
    }

        .btn-success:hover {
            background-color: #1e8449;
        }

    .mb-3 {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-bottom: 20px;
    }

        .mb-3 .btn {
            white-space: nowrap;
            flex: 0 1 auto;
            min-width: 150px;
        }
</style>

<body>
    <div class="container">
        <h1>Your Offer List</h1>

        <div class="card">
            <div class="mb-3 text-center">
                <a class="btn btn-success" asp-action="AddProduct">Add Product</a>
                <a class="btn btn-success" asp-action="AddService">Add Service</a>
            </div>


            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Availability</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td>Product</td>
                                <td>@product.ProductItem</td>
                                <td>@product.Price.ToString("C")</td>
                                <td></td>
                                <td class="action-buttons">
                                    <a class="btn btn-primary" asp-action="UpdateProduct" asp-route-id="@product.ProductId">Update</a>
                                    <form asp-controller="Provider" asp-action="RemoveProduct" method="post">
                                        <input type="hidden" name="id" value="@product.ProductId" />
                                        <input type="submit" class="btn btn-danger" value="Delete" />
                                    </form> 
                                </td>
                            </tr>
                        }

                        @foreach (var service in Model.Services)
                        {
                            <tr>
                                <td>Service</td>
                                <td>@service.ServiceItem</td>
                                <td>@service.Fee.ToString("C")</td>
                                <td>
                                    @if (service.Available)
                                    {
                                        <span class="text-success">Available</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">Not Available</span>
                                    }
                                </td>
                                <td class="action-buttons">
                                    <a class="btn btn-primary" asp-action="UpdateService" asp-route-id="@service.ServiceId">Update</a>
                                    <form asp-controller="Provider" asp-action="RemoveService" method="post">
                                        <input type="hidden" name="id" value="@service.ServiceId" />
                                        <input type="submit" class="btn btn-danger" value="Delete" />
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>